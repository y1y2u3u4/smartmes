# SmartMES Lite 环境配置文件示例
# 复制此文件为 .env 并根据实际情况修改配置

# ============================================
# MySQL数据库配置
# ============================================
MYSQL_ROOT_PASSWORD=smartmes123
MYSQL_DATABASE=smartmes
MYSQL_USER=smartmes
MYSQL_PASSWORD=smartmes123

# ============================================
# 服务端口配置
# ============================================
# 后端服务端口
BACKEND_PORT=8080

# 前端服务端口
FRONTEND_PORT=80

# MySQL端口（如需外部访问）
MYSQL_PORT=3306

# ============================================
# 后端应用配置
# ============================================
# Spring Profile（dev/prod）
SPRING_PROFILES_ACTIVE=prod

# JVM参数
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC

# 日志级别
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_SMARTMES=DEBUG

# ============================================
# 前端应用配置
# ============================================
# API基础URL（浏��器访问）
VITE_API_BASE_URL=http://localhost:8080

# ============================================
# 开发模式配置
# ============================================
# 远程调试端口（仅开发模式）
DEBUG_PORT=5005

# Vite开发服务器端口（仅开发模式）
VITE_DEV_PORT=5173

# ============================================
# 时区配置
# ============================================
TZ=Asia/Shanghai

# ============================================
# 数据库备份配置（可选）
# ============================================
# 备份目录
BACKUP_DIR=./backups

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# ============================================
# 安全配置（生产环境请务必修改）
# ============================================
# JWT密钥（请修改为随机字符串）
JWT_SECRET=your-secret-key-change-this-in-production

# JWT过期时间（小时）
JWT_EXPIRATION=24

# ============================================
# 邮件配置（可选）
# ============================================
# SMTP服务器
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@example.com
MAIL_PASSWORD=your-mail-password
MAIL_FROM=noreply@example.com

# ============================================
# 文件上传配置
# ============================================
# 文件上传大小限制（MB）
MAX_FILE_SIZE=20

# 文件存储路径
FILE_STORAGE_PATH=./uploads

# ============================================
# Redis配置（可选，用于缓存）
# ============================================
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================
# 监控配置（可选）
# ============================================
# 启用Actuator端点
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics

# ============================================
# 其他配置
# ============================================
# 应用名称
APP_NAME=SmartMES Lite

# 应用版本
APP_VERSION=1.0.0
